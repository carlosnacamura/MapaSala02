------------- CODIGOS -------------
CREATE DATABASE AULA_DS;
USE AULA_DS;
CREATE TABLE PROFESSORES (
	Id INT NOT NULL PRIMARY KEY IDENTITY(1,1),
	Nome VARCHAR(50) NOT NULL,
	Apelido VARCHAR(15) NOT NULL
);

CREATE TABLE DISCIPLINAS (
	Id INT NOT NULL PRIMARY KEY IDENTITY(1,1),
	Nome VARCHAR(60) NOT NULL,
	Sigla VARCHAR(8) NOT NULL
);
CREATE TABLE SALAS (
	Id INT NOT NULL PRIMARY KEY IDENTITY(1,1),
	Nome VARCHAR(30) NOT NULL,
	NumeroComputadores INT NOT NULL,
	NumeroCadeiras INT NOT NULL,
	IsLab BIT NOT NULL,
	Disponivel BIT NOT NULL
);
CREATE TABLE USUARIOS (
	Id INT NOT NULL PRIMARY KEY IDENTITY(1,1),
	Login VARCHAR(50) NOT NULL,
	Senha VARCHAR(50) NOT NULL,
	Nome VARCHAR(50) NOT NULL,
	Ativo BIT NOT NULL
);
CREATE TABLE CURSOS (
	Id INT NOT NULL PRIMARY KEY IDENTITY(1,1),
	Nome VARCHAR(50) NOT NULL,
	Turno VARCHAR(10) NOT NULL,
	Sigla VARCHAR(10) NOT NULL
);
CREATE TABLE CURSO_DISCIPLINAS (
	Id INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Periodo VARCHAR(15) NOT NULL,
	Disciplinas_Id INT NOT NULL,
	Curso_Id INT NOT NULL,
	CONSTRAINT FK_DISCIPLINAS FOREIGN KEY(Disciplinas_Id) REFERENCES DISCIPLINAS(Id),
	CONSTRAINT FK_CURSOS FOREIGN KEY(Curso_Id) REFERENCES CURSOS(Id)
);
